@{
    ViewBag.Title = "SendMail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/js/simditor/css/simditor.css" rel="stylesheet" />
<script src="~/Content/js/simditor/js/module.min.js"></script>
<script src="~/Content/js/simditor/js/hotkeys.min.js"></script>
<script src="~/Content/js/simditor/js/simditor.min.js"></script>
<style>
    .mail-header
    {
        background-color: #fff;
        border-bottom: 1px solid #ddd;
        font-size: 20px;
        height: 60px;
        line-height: 60px;
        padding-left: 30px;
        padding-right: 30px;
    }

    .mail-body
    {
        padding: 20px;
    }

    .mail-box
    {
        border: 1px solid #ddd;
    }

    .form
    {
        width: 100%;
        margin: 0px;
        padding: 0px;
        border-collapse: collapse;
        border-width: 3px 1px 1px;
        table-layout: fixed;
    }

        .form .formTitle
        {
            position: relative;
            left: 0px;
            text-align: right;
            white-space: nowrap;
            font-weight: normal;
            width: 90px;
            padding-right: 15px;
        }

        .form .formValue
        {
            position: relative;
            padding: 5px;
            width: auto;
        }

    .simditor
    {
        border-left: none;
        border-right: none;
        border-top: none;
    }

    .has-error .form-control
    {
        border: 1px solid #a4cbff;
    }
</style>
<script>
    var editor;
    $(function () {
        editor = new Simditor({
            textarea: $('#content'),
            toolbar: ['title', 'bold', 'italic', 'underline', 'strikethrough', 'color', '|', 'ol', 'ul', 'blockquote', 'code', 'table', '|', 'link', 'image', 'hr', '|', 'indent', 'outdent']
        });
    });
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        var postData = $("#form1").formSerialize();
        postData["content"] = editor.getValue();
        $.submitForm({
            loading: "正在发送邮件...",
            url: "/SendMail/SendMail",
            param: $("#form1").formSerialize(),
            success: function () {
                $.reload();
            }
        })
    }
</script>
<form id="form1">
    <div class="mail-box">
        <div class="mail-header">写邮件</div>
        <div class="mail-body">
            <table class="form">
                <tr>
                    <th class="formTitle">发送到 </th>
                    <td class="formValue">
                        <input id="account" name="account" type="text" class="form-control required" placeholder="输入多个邮件地址请用英文符号;隔开" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">主题</th>
                    <td class="formValue">
                        <input id="title" name="title" type="text" class="form-control required" />
                    </td>
                </tr>
            </table>
        </div>
        <div class="mail-body" style="padding: 0px;">
            <textarea id="content" name="content" class="form-control" rows="5"></textarea>
        </div>
        <div class="mail-body" style="text-align: right;">
            <a href="javascript:void()" onclick="submitForm()" class="btn btn-primary" style="margin-right: 5px;"><i class="fa fa-reply"></i>发送</a>
            <a href="javascript:void()" class="btn btn-warning"><i class="fa fa-pencil"></i>存为草稿</a>
        </div>
    </div>
</form>
